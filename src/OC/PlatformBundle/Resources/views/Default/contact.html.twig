{% extends 'OCPlatformBundle::layout.html.twig'%}

{% block title %}{{ parent() }} - Contact{% endblock %}

{% block stylesheets %}
    {{ parent() }}
	<link href="{{ asset('css/nao_contact.css') }}" rel="stylesheet">
{% endblock %}

{% block body %}
<div class="container">

    {% for flashMessage in app.session.flashbag.get('info') %}
        <div class="container alert alert-success alert-dismissible mt-30 mb-30">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            {{ flashMessage }}
        </div>
    {% endfor %}
</div>

    <div class="container">
        <div class="row">

            <h1 class="titlePage mt-30 mb-50">Formulaire de contact</h1>

            <div class="col-sm-12 search mb-20 paddHeight">
                <p id="accrocheForm" class="col-xs-12 mt-30 mb-50">Si vous souhaitez nous contacter, vous pouvez nous laisser un message ici.<br>Nous vous répondrons avec plaisir dès que possible.</p>

                    {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
                    {{ form_errors(form) }}

                    <div class="row">
                        
                        <div class="form-group">
                            <label class="col-sm-4 control-label" for="firstName">Prénom :</label>
                            {{ form_errors(form.firstName) }}
                            <div class="col-sm-6">
                                {{ form_widget(form.firstName, {'attr': {'class': 'form-control',
                                    'placeholder': 'Votre prénom'
                                }}) }}
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-4 control-label" for="lastName">Nom :</label>
                            {{ form_errors(form.lastName) }}
                            <div class="col-sm-6">
                                {{ form_widget(form.lastName, {'attr': {'class': 'form-control',
                                    'placeholder': 'Votre nom'
                                }}) }}
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-4 control-label" for="email">Adresse email :</label>
                            {{ form_errors(form.email) }}
                            <div class="col-sm-6">
                                {{ form_widget(form.email, {'attr': {'class': 'form-control',
                                    'placeholder': 'votre@email.ici'
                                }}) }}
                            </div>
                        </div>
                        
                        <div class="form-group">
                            <label class="col-sm-4 control-label" for="message">Message :</label>
                            {{ form_errors(form.message) }}
                            <div class="col-sm-6">
                                {{ form_widget(form.message, {'attr': {'class': 'form-control',
                                    'rows': '10'
                                }}) }}
                            </div>
                        </div>
                        
                        



                        <div class="form-group">
                            <div class="col-sm-2 col-sm-offset-4">
                                <input type="submit" class="btn btnNaoGreen" value="Envoyer" />
                            </div>
                        </div>

                    </div>

                    {{ form_rest(form) }}

                    {{ form_end(form) }}
                </div>
            </div>
        </div>

{% endblock %}

